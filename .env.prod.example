# Production Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===================
# Database (Required)
# ===================
POSTGRES_USER=learner
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
POSTGRES_DB=learner_db

# ===================
# Redis (Required)
# ===================
REDIS_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# ===================
# API Keys (Required)
# ===================
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXX

# OpenAI for embeddings (Optional)
OPENAI_API_KEY=

# ===================
# Authentication (Required)
# ===================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_KEY
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# ===================
# Application
# ===================
ENVIRONMENT=production
LOG_LEVEL=INFO

# ===================
# CORS (Required for frontend access)
# ===================
# Comma-separated list of allowed origins
# Example: https://app.example.com,https://www.example.com
CORS_ORIGINS=

# ===================
# Database Pool (Optional, defaults shown)
# ===================
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ===================
# LLM Settings
# ===================
DEFAULT_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=4096
TEMPERATURE=0.7

# ===================
# Content Source API Keys (Optional)
# ===================
TWITTER_BEARER_TOKEN=
YOUTUBE_API_KEY=
GITHUB_TOKEN=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=
