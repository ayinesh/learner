# AI Learning System Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# REQUIRED
# ===================

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Railway PostgreSQL (get from Railway dashboard -> Variables)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_learning

# Railway Redis (get from Railway dashboard -> Variables)
# Format: redis://default:password@host:port
REDIS_URL=redis://localhost:6379

# ===================
# AUTHENTICATION
# ===================

# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# ===================
# OPTIONAL
# ===================

# Application Settings
LOG_LEVEL=INFO
DEFAULT_SESSION_MINUTES=30
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Content Source API Keys (add as you enable sources)
# Twitter/X API
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# YouTube Data API
YOUTUBE_API_KEY=

# GitHub API (optional, increases rate limits)
GITHUB_TOKEN=

# Reddit API
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=ai-learning-system/0.1.0

# Discord Webhook (for receiving updates)
DISCORD_WEBHOOK_URL=
